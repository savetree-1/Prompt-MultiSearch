{
  "manifest_version": 3,
  "name": "Prompt MultiSearch",
  "version": "1.0.0",
  "description": "Search across multiple AI models simultaneously - Hugging Face, Cohere, AI21, Groq, and Google Gemini",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://api-inference.huggingface.co/*",
    "https://api.cohere.ai/*",
    "https://api.ai21.com/*",
    "https://api.groq.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Prompt MultiSearch",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
